  "private": true,
  "dependencies": {
    "@ajgifford/keepwatching-common-server": "^0.7.5",
    "@ajgifford/keepwatching-types": "^0.6.1",
    "body-parser": "^1.20.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
    "firebase-admin": "^13.1.0",
    "fs": "^0.0.1-security",
    "helmet": "^8.0.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.15.2",
    "tail": "^2.2.6",
    "uuid": "^11.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.4",
    "@types/tail": "^2.2.3",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.24.0"
  },
  "resolutions": {
    "esbuild": "0.25.0"
  },
  "scripts": {
    "build": "npx tsc",
    "clean": "rimraf dist",
    "rebuild": "yarn clean && yarn build",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "format": "prettier --config ./prettier.config.js . --write",
    "pm2:dev": "pm2 start ecosystem.config.js --only keepwatching-admin-server-dev",
    "pm2:prod": "npm run build && pm2 start ecosystem.config.js --env production --only keepwatching-admin-server",
    "pm2:stop:dev": "pm2 stop keepwatching-admin-server-dev",
    "pm2:stop:prod": "pm2 stop keepwatching-admin-server",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "start:dev": "./scripts/start-admin.sh dev",
    "start:prod": "./scripts/start-admin.sh prod"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
